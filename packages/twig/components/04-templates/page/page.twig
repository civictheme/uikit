{#
/**
 * @file
 * CivicTheme Page Template component.
 *
 * Variables:
 * - theme: [string] Theme variation (light or dark).
 * - attributes: [string] Additional HTML attributes.
 * - modifier_class: [string] Additional CSS classes.
 * - banner: [string] Banner content.
 * - highlighted: [string] Highlighted content.
 * - header_theme: [string] Theme variation for header (light or dark).
 * - header_top_1: [string] Header top section 1 content.
 * - header_top_2: [string] Header top section 2 content.
 * - header_top_3: [string] Header top section 3 content.
 * - header_middle_1: [string] Header middle section 1 content.
 * - header_middle_2: [string] Header middle section 2 content.
 * - header_middle_3: [string] Header middle section 3 content.
 * - header_bottom_1: [string] Header bottom section 1 content.
 * - content_top: [string] Main content area top content.
 * - hide_sidebar_left: [boolean] Whether to hide the left sidebar.
 * - hide_sidebar_right: [boolean] Whether to hide the right sidebar.
 * - sidebar_top_left: [string] Top left sidebar content.
 * - sidebar_top_left_attributes: [string] HTML attributes for top left sidebar.
 * - sidebar_top_right: [string] Top right sidebar content.
 * - sidebar_top_right_attributes: [string] HTML attributes for top right sidebar.
 * - content: [string] Main content.
 * - content_attributes: [string] HTML attributes for main content.
 * - sidebar_bottom_left: [string] Bottom left sidebar content.
 * - sidebar_bottom_left_attributes: [string] HTML attributes for bottom left sidebar.
 * - sidebar_bottom_right: [string] Bottom right sidebar content.
 * - sidebar_bottom_right_attributes: [string] HTML attributes for bottom right sidebar.
 * - sidebar: [string] Legacy sidebar content.
 * - sidebar_attributes: [string] Legacy sidebar HTML attributes
 * - content_bottom: [string] Main content area bottom content.
 * - content_contained: [boolean] Whether page content should be contained.
 * - vertical_spacing: [string] Controls vertical spacing (top, bottom, or both).
 * - footer_theme: [string] Theme variation for footer (light or dark).
 * - footer_background_image: [string] Background image for footer.
 * - footer_top_1: [string] Footer top section 1 content.
 * - footer_top_2: [string] Footer top section 2 content.
 * - footer_middle_1: [string] Footer middle section 1 content.
 * - footer_middle_2: [string] Footer middle section 2 content.
 * - footer_middle_3: [string] Footer middle section 3 content.
 * - footer_middle_4: [string] Footer middle section 4 content.
 * - footer_bottom_1: [string] Footer bottom section 1 content.
 * - footer_bottom_2: [string] Footer bottom section 2 content.
 *
 * Slots:
 * - header_slot: [slot] Header area content
 * - banner_slot: [slot] Banner area content
 * - highlighted_slot: [slot] Highlighted area content
 * - content_slot: [slot] Content area content
 * - footer_slot: [slot] Footer area content
 * - back_to_top_slot: [slot] Back to top area content
 */
#}

{% set theme_class = 'ct-theme-%s'|format(theme|default('light')) %}
{% set modifier_class = '%s %s'|format(theme_class, modifier_class|default('')) %}

<div class="ct-page {{ modifier_class -}}" {% if attributes is not empty %}{{- attributes|raw -}}{% endif %}>
  <a id="top" tab-index="-1" aria-hidden="true"></a>

  {% block header_slot %}
    {% include '@organisms/header/header.twig' with {
      theme: header_theme,
      content_top1: header_top_1,
      content_top2: header_top_2,
      content_top3: header_top_3,
      content_middle1: header_middle_1,
      content_middle2: header_middle_2,
      content_middle3: header_middle_3,
      content_bottom1: header_bottom_1,
    } only %}
  {% endblock %}

  {% block banner_slot %}
    {% if banner is not empty %}
      {{ banner|raw }}
    {% endif %}
  {% endblock %}

  {% if highlighted is not empty %}
    {% block highlighted_slot %}
      <div class="container">
        <div class="row">
          <div class="col-xxs-12">
            {{ highlighted|raw }}
          </div>
        </div>
      </div>
    {% endblock %}
  {% endif %}

  {% block content_slot %}
    {% include '@base/layout/layout.twig' with {
      content_top: content_top,
      hide_sidebar_left: hide_sidebar_left,
      hide_sidebar_right: hide_sidebar_right,
      sidebar_top_left: sidebar_top_left,
      sidebar_top_left_attributes: sidebar_top_left_attributes,
      sidebar_top_right: sidebar_top_right,
      sidebar_top_right_attributes: sidebar_top_right_attributes,
      content: content,
      content_attributes: content_attributes,
      sidebar_bottom_left: sidebar_bottom_left|default(sidebar),
      sidebar_bottom_left_attributes: sidebar_bottom_left_attributes|default(sidebar_attributes),
      sidebar_bottom_right: sidebar_bottom_right,
      sidebar_bottom_right_attributes: sidebar_bottom_right_attributes,
      is_contained: content_contained,
      content_bottom: content_bottom,
      vertical_spacing: vertical_spacing,
      attributes: (banner is empty) ? 'id="main-content" tabindex="-1"' : '',
    } only %}
  {% endblock %}

  {% block footer_slot %}
    {% include '@organisms/footer/footer.twig' with {
      theme: footer_theme,
      background_image: footer_background_image,
      content_top1: footer_top_1,
      content_top2: footer_top_2,
      content_middle1: footer_middle_1,
      content_middle2: footer_middle_2,
      content_middle3: footer_middle_3,
      content_middle4: footer_middle_4,
      content_bottom1: footer_bottom_1,
      content_bottom2: footer_bottom_2,
    } only %}
  {% endblock %}

  {% block back_to_top_slot %}
    {% include '@molecules/back-to-top/back-to-top.twig' with {} only %}
  {% endblock %}
</div>
