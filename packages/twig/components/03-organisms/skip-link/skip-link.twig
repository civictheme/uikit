{#
/**
 * @file
 * CivicTheme Skip Link component.
 *
 * Variables:
 * - theme: [string] Theme variation (light or dark).
 * - text: [string] Link text.
 * - url: [string] Link URL.
 * - modifier_class: [string] Additional CSS classes.
 * - attributes: [string] HTML attributes.
 */
#}

{% set text = text|default('Skip to main content') %}
{% set theme_class = 'ct-theme-%s'|format(theme|default('light')) %}
{% set modifier_class = '%s %s'|format(theme_class, modifier_class|default('')) %}

{% if text %}
  <div class="ct-skip-link {{ modifier_class -}}">
    {% include '@atoms/link/link.twig' with {
      theme: theme,
      text: text,
      url: url,
      title: text,
      hidden_text: text,
      attributes: attributes|default('data-platform'),
      modifier_class: 'ct-skip-link__link ct-visually-hidden',
    } only %}
  </div>
{% endif %}
