{#
/**
 * @file
 * CivicTheme List component.
 *
 * Variables:
 * - theme: [string] Theme variation (light or dark).
 * - title: [string] List title.
 * - link_above: [object] Above list link object:
 *   - text: [string] Link text.
 *   - url: [string] Link URL.
 *   - is_new_window: [boolean] Whether to open link in a new window.
 *   - is_external: [boolean] Whether the link is external.
 * - content: [string] List main content.
 * - filters: [string] Exposed filters content.
 * - results_count: [string] Results count text.
 * - rows_above: [string] Above rows content.
 * - rows: [string] Rows content.
 * - rows_below: [string] Below rows content.
 * - empty: [string] No results content.
 * - pagination: [string] Pagination content.
 * - footer: [string] Footer content.
 * - link_below: [object] Below list link object:
 *   - text: [string] Link text.
 *   - url: [string] Link URL.
 *   - is_new_window: [boolean] Whether to open link in a new window.
 *   - is_external: [boolean] Whether the link is external.
 * - vertical_spacing: [string] List vertical spacing (top, bottom, or both).
 * - with_background: [boolean] Whether to display with a background.
 * - attributes: [string] Additional HTML attributes.
 * - modifier_class: [string] Additional CSS classes.
 *
 * Slots:
 * - header_slot: [slot] Header content
 * - title_slot: [slot] Title content
 * - link_above_slot: [slot] Link above content
 * - content_slot: [slot] Content
 * - list_slot: [slot] List content
 * - filters_slot: [slot] Filters content
 * - rows_slot: [slot] Rows content
 * - rows_above_slot: [slot] Rows above content
 * - results_count_slot: [slot] Results count content
 * - rows_below_slot: [slot] Rows below content
 * - empty_slot: [slot] Empty content
 * - list_below_slot: [slot] List below content
 * - pagination_slot: [slot] Pagination content
 * - footer_slot: [slot] Footer content
 */
#}

{% set with_background_class = with_background ? 'ct-list--with-background' : '' %}
{% set vertical_spacing_class = vertical_spacing in ['top', 'bottom', 'both'] ? 'ct-vertical-spacing-inset--%s'|format(vertical_spacing) : '' %}
{% set theme_class = 'ct-theme-%s'|format(theme|default('light')) %}
{% set modifier_class = '%s %s %s %s'|format(theme_class, with_background_class, vertical_spacing_class, modifier_class|default('')) %}

<div class="ct-list {{ modifier_class -}}" {% if attributes is not empty %}{{- attributes|raw -}}{% endif %}>
  <div class="ct-list__inner">
    {% block header_slot %}
      {% if title is not empty or link_above is not empty %}
        <div class="ct-list__header">
          <div class="container">
            <div class="row">
              <div class="col-xxs-12 col-m-9">
                {% block title_slot %}
                  {% if title -%}
                    {% include '@atoms/heading/heading.twig' with {
                      content: title,
                      level: 2,
                      theme: theme,
                      modifier_class: 'ct-list__title',
                    } only %}
                  {% endif %}
                {% endblock %}
              </div>
              <div class="col-xxs-12 col-m-3">
                {% block link_above_slot %}
                  {% if link_above %}
                    <div class="ct-list__link-above ct-flex-justify-content-center">
                      {% include '@atoms/button/button.twig' with {
                        theme: theme,
                        type: 'secondary',
                        kind: 'link',
                        size: 'regular',
                        text: link_above.text,
                        url: link_above.url,
                        is_new_window: link_above.is_external,
                        is_external: link_above.is_external,
                        icon: link_above.is_external ? '' : 'right-arrow-2',
                        modifier_class: 'ct-list__link-above__link',
                      } only %}
                    </div>
                  {% endif %}
                {% endblock %}
              </div>
            </div>
          </div>
        </div>
      {% endif %}
    {% endblock %}

    {% block content_slot %}
      {% if content %}
        <div class="ct-list__content">
          <div class="container">
            <div class="row">
              <div class="col-xxs-12">
                {% include '@atoms/paragraph/paragraph.twig' with {
                  content: content,
                  allow_html: true,
                  theme: theme,
                  modifier_class: 'ct-list__content__inner',
                } only %}
              </div>
            </div>
          </div>
        </div>
      {% endif %}
    {% endblock %}

    {% block list_slot %}
      {% block filters_slot %}
        {% if filters -%}
          <div class="ct-list__filters">
            <div class="container">
              <div class="row">
                <div class="col-xxs-12">
                  {{ filters|raw }}
                </div>
              </div>
            </div>
          </div>
        {% endif %}
      {% endblock %}

      {% block rows_slot %}
        {% if rows -%}

          {% block rows_above_slot %}
            {% if rows_above -%}
              <div class="container ct-list__rows-above">
                <div class="row">
                  <div class="col-xxs-12">
                    {% if rows_above is not iterable %}
                      {% set rows_above = [rows_above] %}
                    {% endif %}
                    {% for rows_above_row in rows_above %}
                      {{- rows_above_row|raw -}}
                    {% endfor %}
                  </div>
                </div>
              </div>
            {% endif %}
          {% endblock %}

          {% block results_count_slot %}
            {% if results_count -%}
              <div class="container">
                <div class="row">
                  <div class="col-xxs-12">
                    <div class="ct-list__results-count">{{ results_count }}</div>
                  </div>
                </div>
              </div>
            {% endif %}
          {% endblock %}

          <div class="ct-list__rows">
            {{ rows|raw }}
          </div>

          {% block rows_below_slot %}
            {% if rows_below %}
              <div class="container ct-list__rows-below">
                <div class="row">
                  <div class="col-xxs-12">
                    {% if rows_below is not iterable %}
                      {% set rows_below = [rows_below] %}
                    {% endif %}
                    {% for rows_below_row in rows_below %}
                      {{- rows_below_row|raw -}}
                    {% endfor %}
                  </div>
                </div>
              </div>
            {% endif %}
          {% endblock %}
        {% endif %}
      {% endblock %}

      {% block empty_slot %}
        {% if empty is defined and (rows is not defined or rows is empty) -%}
          <div class="container ct-list__empty-results">
            <div class="row">
              <div class="col-xxs-12">
                {% include '@atoms/paragraph/paragraph.twig' with {
                  content: empty,
                  allow_html: true,
                  theme: theme,
                  modifier_class: 'ct-list__empty-results__inner',
                } only %}
              </div>
            </div>
          </div>
        {% endif %}
      {% endblock %}
    {% endblock %}

    {% block list_below_slot %}
      {% if link_below %}
        <div class="ct-list__link-below ct-flex-justify-content-center">
          {% include '@atoms/button/button.twig' with {
            theme: theme,
            type: 'secondary',
            kind: 'link',
            size: 'large',
            text: link_below.text,
            url: link_below.url,
            is_new_window: link_below.is_external,
            is_external: link_below.is_external,
            icon: link_below.is_external ? '' : 'right-arrow-2',
            modifier_class: 'ct-list__link-below__link',
          } only %}
        </div>
      {% endif %}

      {% if pagination is defined and pagination is not empty %}
        <div class="ct-list__results-below">
          {% block pagination_slot %}
            <div class="container">
              <div class="row">
                <div class="col-xxs-12">
                  <div class="ct-list__pagination">
                    {{ pagination|raw }}
                  </div>
                </div>
              </div>
            </div>
          {% endblock %}
        </div>
      {% endif %}
    {% endblock %}

    {% block footer_slot %}
      {% if footer is not empty -%}
        <footer class="ct-list__footer">
          <div class="container">
            <div class="row">
              <div class="col-xxs-12">
                {{ footer|raw }}
              </div>
            </div>
          </div>
        </footer>
      {% endif %}
    {% endblock %}
  </div>
</div>
