{#
/**
 * @file
 * CivicTheme Footer component.
 *
 * Variables:
 * - theme: [string] Theme variation (light or dark).
 * - content_top1: [string] Top section first content slot.
 * - content_top2: [string] Top section second content slot.
 * - content_middle1: [string] Middle section first content slot.
 * - content_middle2: [string] Middle section second content slot.
 * - content_middle3: [string] Middle section third content slot.
 * - content_middle4: [string] Middle section fourth content slot.
 * - content_middle5: [string] Middle section fifth content slot.
 * - content_bottom1: [string] Bottom section first content slot.
 * - content_bottom2: [string] Bottom section second content slot.
 * - background_image: [string] Content background inline image.
 * - modifier_class: [string] Additional CSS classes.
 * - attributes: [string] Additional HTML attributes.
 */
#}

{% set theme_class = 'ct-theme-%s'|format(theme|default('light')) %}
{% set modifier_class = '%s %s'|format(theme_class, modifier_class|default('')) %}

{% if content_top1 or content_top2 or content_middle1 or content_middle2 or content_middle3 or content_middle4 or content_bottom1 or content_bottom2 %}
  <footer class="ct-footer {{ modifier_class -}}" role="contentinfo" data-component-name="ct-footer" {% if background_image %}style="background-image: url('{{ background_image }}')"{% endif %} {% if attributes %}{{- attributes|raw -}}{% endif %}>

    {% if content_top1 or content_top2 %}
      <div class="container ct-footer__top">
        <div class="row">

          {% if content_top1 %}
            {%- block content_top1 %}
              <div class="col-xxs-12 col-m-6">
                <div class="ct-footer__top__content-top1">
                  {{- content_top1|raw -}}
                </div>
              </div>
            {% endblock -%}
          {% endif %}

          {% if content_top2 %}
            {%- block content_top2 %}
              <div class="col-xxs-12 col-m-6">
                <div class="ct-footer__top__content-top2">
                  {{- content_top2|raw -}}
                </div>
              </div>
            {% endblock -%}
          {% endif %}

        </div>
      </div>
    {% endif %}

    {% if content_middle1 or content_middle2 or content_middle3 or content_middle4 or content_middle5 %}
      <div class="container ct-footer__middle">
        <div class="row">

          {% if content_middle1 %}
            {%- block content_middle1 %}
              <div class="col-xxs-12 col-m-3">
                <div class="ct-footer__middle__content-middle1">
                  {{- content_middle1|raw -}}
                </div>
              </div>
            {% endblock -%}
          {% endif %}

          {% if content_middle2 %}
            {%- block content_middle2 %}
              <div class="col-xxs-12 col-m-3">
                <div class="ct-footer__middle__content-middle2">
                  {{- content_middle2|raw -}}
                </div>
              </div>
            {% endblock -%}
          {% endif %}

          {% if content_middle3 %}
            {%- block content_middle3 %}
              <div class="col-xxs-12 col-m-3">
                <div class="ct-footer__middle__content-middle3">
                  {{- content_middle3|raw -}}
                </div>
              </div>
            {% endblock -%}
          {% endif %}

          {% if content_middle4 %}
            {%- block content_middle4 %}
              <div class="col-xxs-12 col-m-3">
                <div class="ct-footer__middle__content-middle4">
                  {{- content_middle4|raw -}}
                </div>
              </div>
            {% endblock -%}
          {% endif %}

          {% if content_middle5 %}
            {%- block content_middle5 %}
              <div class="col-xxs-12">
                <div class="ct-footer__middle__content-middle5">
                  {{- content_middle5|raw -}}
                </div>
              </div>
            {% endblock -%}
          {% endif %}

        </div>
      </div>
    {% endif %}

    {% if content_bottom1 or content_bottom2 %}
      <div class="container ct-footer__bottom">
        <div class="row">

          {% if content_bottom1 %}
            {%- block content_bottom1 %}
              <div class="col-xxs-12 col-m-7">
                <div class="ct-footer__bottom__content-bottom1">
                  {{- content_bottom1|raw -}}
                </div>
              </div>
            {% endblock -%}
          {% endif %}

          {% if content_bottom2 %}
            {%- block content_bottom2 %}
              <div class="col-xxs-12 col-m-5">
                <div class="ct-footer__bottom__content-bottom2">
                  {{- content_bottom2|raw -}}
                </div>
              </div>
            {% endblock -%}
          {% endif %}

        </div>
      </div>
    {% endif %}

  </footer>
{% endif %}
