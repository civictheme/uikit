{#
/**
 * @file
 * CivicTheme Back to Top component.
 *
 * Variables:
 * - attributes: [string] Additional HTML attributes.
 */
#}

<div class="ct-back-to-top" data-component-name="back-to-top" data-scrollspy data-scrollspy-offset="400" {% if attributes %}{{- attributes|raw -}}{% endif %}>
  {% include '@atoms/button/button.twig' with {
    kind: 'link',
    type: 'primary',
    icon: 'up-arrow',
    url: '#top',
    text: '<span class="ct-visually-hidden">Return focus to the top of the page</span>',
    allow_html: true,
    attributes: 'data-skip-to-target',
    modifier_class: 'ct-back-to-top__button',
  } only %}
</div>
