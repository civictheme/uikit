{#
/**
 * @file
 * CivicTheme Back to Top component.
 *
 * Props:
 * - attributes: [string] Additional HTML attributes.
 * - modifier_class: [string] Additional CSS classes.
 */
#}

{%- set text -%}
  <span class="ct-visually-hidden">Return focus to the top of the page</span>
  {%- include '@base/icon/icon.twig' with {symbol: 'up-arrow'} only -%}
{%- endset -%}

<div class="ct-back-to-top {{ modifier_class|default('') }}" data-component-name="back-to-top" data-scrollspy data-scrollspy-offset="400" {% if attributes is not empty %}{{- attributes|raw -}}{% endif %}>
  {% include '@atoms/button/button.twig' with {
    kind: 'link',
    type: '',
    url: '#top',
    text: text,
    attributes: 'data-skip-to-target',
    modifier_class: 'ct-back-to-top__button',
  } only %}
</div>
