{#
/**
 * @file
 * CivicTheme Social Links component.
 *
 * Variables:
 * - theme: [string] Theme variation (light or dark).
 * - items: [array] Social media links:
 *   Each item contains:
 *   - title: [string] Title to be added to the 'title' attribute.
 *   - icon: [string] Icon name from the existing icon set.
 *   - icon_html: [string] Alternative icon HTML for embedding.
 *   - url: [string] Link URL.
 * - with_border: [boolean] Whether icons have borders.
 * - attributes: [string] Additional HTML attributes.
 * - modifier_class: [string] Additional CSS classes.
 *
 * Slots:
 * - items_slot: [slot] Items area content
 */
#}

{% set with_border_class = with_border ? 'ct-social-links--with-border' : '' %}
{% set theme_class = 'ct-theme-%s'|format(theme|default('light')) %}
{% set modifier_class = '%s %s %s'|format(theme_class, with_border_class, modifier_class|default('')) %}

{% if items %}
  <div class="ct-social-links {{ modifier_class -}}" {% if attributes %}{{- attributes|raw -}}{% endif %}>

    {% block items_slot %}
      {% set items_rendered = [] %}
      {% for item in items %}
        {%- set item_rendered %}
          {% include '@atoms/button/button.twig' with {
            theme: theme,
            kind: 'link',
            type: 'tertiary',
            icon: not item.icon_html ? item.icon : null,
            text: item.icon_html|default(null),
            url: item.url,
            is_external: false,
            is_new_window: true,
            allow_html: true,
            modifier_class: 'ct-social-links__button',
            attributes: item.title ? ' title="' ~ item.title ~ '"' : '',
          } only %}
        {% endset -%}
        {% set items_rendered = items_rendered|merge([item_rendered]) %}
      {% endfor %}

      {% include '@base/item-list/item-list.twig' with {
        items: items_rendered,
        direction: 'horizontal',
        modifier_class: 'ct-social-links__list',
      } only %}
    {% endblock %}

  </div>
{% endif %}
