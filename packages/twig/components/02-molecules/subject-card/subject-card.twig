{#
/**
 * @file
 * CivicTheme Subject Card component.
 *
 * Variables:
 * - theme: [string] Theme variation (light or dark).
 * - image: [object] Card image:
 *   - url: [string] Link URL.
 *   - alt: [string] Image alt text.
 * - image_over: [string] Image overlay content.
 * - title: [string] Card title.
 * - link: [object] Card link object:
 *   - url: [string] Link URL.
 *   - is_new_window: [boolean] Whether to open link in a new window.
 * - attributes: [string] Additional HTML attributes.
 * - modifier_class: [string] Additional CSS classes.
 *
 * Slots:
 * - image_slot: [slot] Image area content
 * - image_over_slot: [slot] Image overlay content
 * - title_slot: [slot] Title area content
 */
#}

{% set with_link = link and link.url %}
{% set with_image = image.url %}
{% set with_image_class = with_image ? 'ct-subject-card--with-image' : '' %}
{% set theme_class = 'ct-theme-%s'|format(theme|default('light')) %}
{% set modifier_class = '%s %s %s'|format(theme_class, with_image_class, modifier_class|default('')) %}

{% if title %}
  <div class="ct-subject-card {{ modifier_class -}}" {% if attributes %}{{- attributes|raw -}}{% endif %}>
    <div class="ct-subject-card__content">
      {% block image_slot %}
        {% if image.url %}
          <div class="ct-subject-card__image">
            {% include '@atoms/image/image.twig' with {
              theme: theme,
              url: image.url,
              alt: image.alt,
            } only %}
          </div>
        {% endif %}
      {% endblock %}

      {% block image_over_slot %}
        {% if image_over %}
          <div class="ct-subject-card__image__over">
            {{ image_over }}
          </div>
        {% endif %}
      {% endblock %}

      {% block title_slot %}
        {% if title %}
          {% set title_content %}
            {% if with_link %}
              {% include '@atoms/link/link.twig' with {
                theme: theme,
                text: title,
                url: link.url,
                is_new_window: link.is_new_window,
                is_external: false,
                icon: not with_image and with_link ? 'right-arrow-2' : '',
                icon_group_disabled: true,
                modifier_class: 'ct-subject-card__title__link',
              } only %}
            {% else %}
              {{ title }}
            {% endif %}
          {% endset %}

          {% include '@atoms/heading/heading.twig' with {
            content: title_content,
            level: 4,
            theme: theme,
            modifier_class: 'ct-subject-card__title',
          } only %}
        {% endif %}
      {% endblock %}
    </div>
  </div>
{% endif %}
