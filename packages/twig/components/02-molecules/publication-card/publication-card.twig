{#
/**
 * @file
 * CivicTheme Publication Card component.
 *
 * Variables:
 * - theme: [string] Theme variation (light or dark).
 * - image: [object] Card image:
 *   - url: [string] File URL.
 *   - alt: [string] Image alt text.
 * - image_over: [string] Image overlay content.
 * - content_top: [string] Top content area.
 * - title: [string] Card title text.
 * - content_middle: [string] Middle content area.
 * - summary: [string] Card summary.
 * - file: [object] File object for download:
 *   - name: [string] File name (as it appears to the user).
 *   - ext: [string] File extension.
 *   - url: [string] File URL.
 *   - size: [string] File size (as it appears to the user).
 *   - created: [string] File created date.
 *   - changed: [string] File changed date.
 *   - icon: [string] File type icon name.
 * - content_bottom: [string] Bottom content area.
 * - attributes: [string] Additional HTML attributes.
 * - modifier_class: [string] Additional CSS classes.
 *
 * Slots:
 * - image_slot: [slot] Image area content
 * - image_over_slot: [slot] Image overlay content
 * - content_top_slot: [slot] Top content area content
 * - title_slot: [slot] Title area content
 * - content_middle_slot: [slot] Middle content area content
 * - summary_slot: [slot] Summary area content
 * - link_slot: [slot] Link area content
 * - content_bottom_slot: [slot] Bottom content area content
 */
#}

{% set with_image = image.url %}
{% set with_image_class = with_image ? 'ct-publication-card--with-image' : '' %}
{% set theme_class = 'ct-theme-%s'|format(theme|default('light')) %}
{% set modifier_class = '%s %s %s'|format(theme_class, with_image_class, modifier_class|default('')) %}

{% if file %}
  <div class="ct-publication-card {{ modifier_class -}}" {% if attributes %}{{- attributes|raw -}}{% endif %}>
    {% block image_slot %}
      {% if image.url %}
        <div class="ct-publication-card__image">
          {% include '@atoms/image/image.twig' with {
            theme: theme,
            url: image.url,
            alt: image.alt,
          } only %}

          {% block image_over_slot %}
            {% if image_over %}
              <div class="ct-publication-card__image__over">
                {{ image_over }}
              </div>
            {% endif %}
          {% endblock %}
        </div>
      {% endif %}
    {% endblock %}

    <div class="ct-publication-card__content">
      {% block content_top_slot %}
        {% if content_top %}
          <div class="ct-publication-card__content-top">
            {{- content_top|raw -}}
          </div>
        {% endif %}
      {% endblock %}

      {% block title_slot %}
        {% if title %}
          {% set title_content %}
            {% include '@atoms/link/link.twig' with {
              theme: theme,
              text: title,
              url: file.url,
              icon: 'download',
              icon_group_disabled: true,
              modifier_class: 'ct-publication-card__title__link',
            } only %}
          {% endset %}

          {% include '@atoms/heading/heading.twig' with {
            content: title_content,
            level: 4,
            theme: theme,
            modifier_class: 'ct-publication-card__title',
          } only %}
        {% endif %}
      {% endblock %}

      {% block content_middle_slot %}
        {% if content_middle %}
          <div class="ct-publication-card__content__middle">
            {{- content_middle|raw -}}
          </div>
        {% endif %}
      {% endblock %}

      {% block summary_slot %}
        {% if summary %}
          {% include '@atoms/paragraph/paragraph.twig' with {
            theme: theme,
            content: summary,
            allow_html: true,
            modifier_class: 'ct-publication-card__summary',
          } only %}
        {% endif %}
      {% endblock %}

      {% block link_slot %}
        {% if file.ext and file.size %}
          {% set extension = ' <span class="ct-publication-card__link__extension">(%s, %s)</span>'|format(file.ext, file.size) %}
        {% elseif file.ext or file.size %}
          {% set extension = ' <span class="ct-publication-card__link__extension">(%s)</span>'|format(file.ext|default(file.size)) %}
        {% endif %}

        {% include '@atoms/link/link.twig' with {
          theme: theme,
          text: file.name ~ extension,
          title: 'Download %s'|format(file.name),
          url: file.url,
          modifier_class: 'ct-publication-card__link'
        } only %}
      {% endblock %}

      {% block content_bottom_slot %}
        {% if content_bottom %}
          <div class="ct-publication-card__content-bottom">
            {{- content_bottom|raw -}}
          </div>
        {% endif %}
      {% endblock %}
    </div>
  </div>
{% endif %}
