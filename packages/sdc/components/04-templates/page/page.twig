{#
/**
 * @file
 * Page template.
 *
 * Variables:
 * - theme: [string] Theme: light, dark.
 * - attributes: [string] Additional attributes.
 * - modifier_class: [string] Additional classes.
 * - header_theme [string] Theme: light, dark.
 * - header_top_1 [string] Content slot.
 * - header_top_2 [string] Content slot.
 * - header_top_3 [string] Content slot.
 * - header_middle_1 [string] Content slot.
 * - header_middle_2 [string] Content slot.
 * - header_middle_3 [string] Content slot.
 * - header_bottom_1 [string] Content slot.
 * - content_top [string] Content top.
 * - hide_sidebar_left [boolean] Hide sidebar left.
 * - hide_sidebar_right [boolean] Hide sidebar right.
 * - sidebar [string] Legacy sidebar content slot.
 * - sidebar_top_left [string] Sidebar top left.
 * - sidebar_top_left_attributes [string]
 * - sidebar_top_right [string]
 * - sidebar_top_right_attributes [string]
 * - content [string]
 * - content_attributes [string]
 * - sidebar_bottom_left [string]
 * - sidebar_bottom_left_attributes [string]
 * - sidebar_bottom_right [string]
 * - content_contained [boolean] - Whether page content is
 * - content_bottom [string]
 * - vertical_spacing: [string] With top, bottom or both vertical spaces.
 * - footer_theme: [string] Theme: light, dark.
 * - footer_background_image [string] Footer Background image.
 * - footer_top_1: [string] Footer top 1.
 * - footer_top_2: [string] Footer top 1.
 * - footer_middle_1: [string] Footer middle 1.
 * - footer_middle_2: [string] Footer middle 2.
 * - footer_middle_3: [string] Footer middle 3.
 * - footer_middle_4: [string] Footer middle 4.
 * - footer_bottom_1: [string] Footer bottom 1.
 * - footer_bottom_2: [string] Footer bottom 2.
 */
#}

{% set theme_class = 'ct-theme-%s'|format(theme|default('light')) %}
{% set modifier_class = '%s %s'|format(theme_class, modifier_class|default('')) %}

<div class="ct-page {{ modifier_class -}}" {% if attributes is not empty %}{{- attributes|raw -}}{% endif %}>
  <a id="top" tab-index="-1" aria-hidden="true"></a>

  {% block header %}
    {% include 'civictheme:header' with {
      theme: header_theme,
      content_top1: header_top_1,
      content_top2: header_top_2,
      content_top3: header_top_3,
      content_middle1: header_middle_1,
      content_middle2: header_middle_2,
      content_middle3: header_middle_3,
      content_bottom1: header_bottom_1,
    } only %}
  {% endblock %}

  {% block banner %}
    {% if banner is not empty %}
      {{ banner|raw }}
    {% endif %}
  {% endblock %}

  {% if highlighted is not empty %}
    {% block highlighted %}
      <div class="container">
        <div class="row">
          <div class="col-xxs-12">
            {{ highlighted|raw }}
          </div>
        </div>
      </div>
    {% endblock %}
  {% endif %}

  {% block content %}
    {% include 'civictheme:layout' with {
      content_top: content_top,
      hide_sidebar_left: hide_sidebar_left,
      hide_sidebar_right: hide_sidebar_right,
      sidebar_top_left: sidebar_top_left,
      sidebar_top_left_attributes: sidebar_top_left_attributes,
      sidebar_top_right: sidebar_top_right,
      sidebar_top_right_attributes: sidebar_top_right_attributes,
      content: content,
      content_attributes: content_attributes,
      sidebar_bottom_left: sidebar_bottom_left|default(sidebar),
      sidebar_bottom_left_attributes: sidebar_bottom_left_attributes|default(sidebar_attributes),
      sidebar_bottom_right: sidebar_bottom_right,
      sidebar_bottom_right_attributes: sidebar_bottom_right_attributes,
      is_contained: content_contained,
      content_bottom: content_bottom,
      vertical_spacing: vertical_spacing,
      attributes: (banner is empty) ? 'id="main-content" tabindex="-1"' : '',
    } only %}
  {% endblock %}

  {% block footer %}
    {% include 'civictheme:footer' with {
      theme: footer_theme,
      background_image: footer_background_image,
      content_top1: footer_top_1,
      content_top2: footer_top_2,
      content_middle1: footer_middle_1,
      content_middle2: footer_middle_2,
      content_middle3: footer_middle_3,
      content_middle4: footer_middle_4,
      content_bottom1: footer_bottom_1,
      content_bottom2: footer_bottom_2,
    } only %}
  {% endblock %}

  {% block back_to_top %}
    {% include 'civictheme:back-to-top' %}
  {% endblock %}
</div>
