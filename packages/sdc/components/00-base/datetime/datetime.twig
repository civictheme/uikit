{#
/**
 * @file
 * CivicTheme DateTime component.
 *
 * Props:
 * - start: [string] Formatted start time.
 * - start_iso: [string] Start time in ISO format.
 * - end: [string] Formatted end time.
 * - end_iso: [string] End time in ISO format.
 * - attributes: [Drupal\Core\Template\Attribute] Additional attributes.
 * - modifier_class: [string] Additional classes.
 */
#}

{% if start is not empty %}
  <span class="ct-datetime {{ modifier_class|default('') }}" {% if attributes is defined and attributes is not null %}{{- attributes -}}{% endif %}>
    <time class="ct-timestamp__start" datetime="{{ start_iso|default(start)|striptags }}">{{ start }}</time>
    {% if end is not empty %}
      &mdash;
      <time class="ct-timestamp__end" datetime="{{ end_iso|default(end)|striptags }}">{{ end }}</time>
    {% endif %}
  </span>
{% endif %}
