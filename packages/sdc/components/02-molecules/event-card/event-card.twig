{#
/**
 * @file
 * CivicTheme Event Card component.
 *
 * Variables:
 * - theme: [string] Theme variation (light or dark).
 * - image: [object] Event image:
 *   - url: [string] Link URL.
 *   - alt: [string] Image alt text.
 * - title: [string] Event title.
 * - summary: [string] Event summary.
 * - date: [string] Start date and time.
 * - date_iso: [string] Start date and time in ISO format.
 * - date_end: [string] End date and time.
 * - date_end_iso: [string] End date and time in ISO format.
 * - location: [string] Event location.
 * - link: [object] Optional link:
 *   - url: [string] Link URL.
 *   - is_new_window: [boolean] Whether to open in a new window.
 * - tags: [array] Event tags:
 *   Each item contains:
 *   - text: [string] Tag text.
 *   - url: [string] Tag URL.
 * - content_top: [string] Card top content.
 * - image_over: [string] Image overlay content.
 * - content_middle: [string] Card middle content.
 * - content_bottom: [string] Card bottom content.
 * - attributes: [string] Additional HTML attributes.
 * - modifier_class: [string] Additional CSS classes.
 *
 * Slots:
 * - image_slot: [slot] Image area content
 * - image_over_slot: [slot] Image overlay content
 * - content_slot: [slot] Content area content
 * - content_top_slot: [slot] Top content area content
 * - date_slot: [slot] Date area content
 * - title_slot: [slot] Title area content
 * - content_middle_slot: [slot] Middle content area content
 * - location_slot: [slot] Location area content
 * - summary_slot: [slot] Summary area content
 * - content_tags_slot: [slot] Tags area content
 * - content_bottom_slot: [slot] Bottom content area content
 */
#}

{% set with_image = image.url %}
{% set with_image_class = with_image ? 'ct-event-card--with-image' : '' %}
{% set with_link = link and link.url %}
{% set image_over_class = image_over ? 'ct-event-card--image-over' : '' %}
{% set theme_class = 'ct-theme-%s'|format(theme|default('light')) %}
{% set modifier_class = '%s %s %s %s'|format(theme_class, with_image_class, image_over_class, modifier_class|default('')) %}

<div class="ct-event-card {{ modifier_class -}}" {% if attributes %}{{- attributes|raw -}}{% endif %}>
  {% block image_slot %}
    {% if image.url or image_over %}
      <div class="ct-event-card__image">
        {% include 'civictheme:image' with {
          theme: theme,
          url: image.url,
          alt: image.alt,
        } only %}

        {% block image_over_slot %}
          {% if image_over %}
            <div class="ct-event-card__image__over">
              {{ image_over }}
            </div>
          {% endif %}
        {% endblock %}
      </div>
    {% endif %}
  {% endblock %}

  {% block content_slot %}
    <div class="ct-event-card__content">
      {% block content_top_slot %}
        {% if content_top %}
          <div class="ct-event-card__content-top">
            {{- content_top|raw -}}
          </div>
        {% endif %}
      {% endblock %}

      {% block date_slot %}
        {% if date %}
          {% set date_content %}
            {% include 'civictheme:datetime' with {
              start: date,
              start_iso: date_iso|default(null),
              end: date_end|default(null),
              end_iso: date_end_iso|default(null),
            } only %}
          {% endset %}

          <div class="ct-event-card__date">
            {% include 'civictheme:tag' with {
              theme: theme,
              type: 'secondary',
              content: date_content,
              icon: 'calendar-2',
              icon_placement: 'before',
            } only %}
          </div>
        {% endif %}
      {% endblock %}

      {% block title_slot %}
        {% if title %}
          {% set title_content %}
            {% if with_link %}
              {% include 'civictheme:link' with {
                theme: theme,
                text: title,
                url: link.url,
                modifier_class: 'ct-event-card__title__link',
              } only %}
            {% else %}
              {{ title }}
            {% endif %}
          {% endset %}

          {% include 'civictheme:heading' with {
            content: title_content,
            level: 4,
            theme: theme,
            modifier_class: 'ct-event-card__title',
          } only %}
        {% endif %}
      {% endblock %}

      {% block content_middle_slot %}
        {% if content_middle %}
          <div class="ct-event-card__middle">
            {{- content_middle|raw -}}
          </div>
        {% endif %}
      {% endblock %}

      {% block location_slot %}
        {% if location %}
          {% include 'civictheme:paragraph' with {
            theme: theme,
            content: location,
            allow_html: true,
            modifier_class: 'ct-event-card__location',
          } only %}
        {% endif %}
      {% endblock %}

      {% block summary_slot %}
        {% if summary %}
          {% include 'civictheme:paragraph' with {
            theme: theme,
            content: summary,
            allow_html: true,
            modifier_class: 'ct-event-card__summary',
          } only %}
        {% endif %}
      {% endblock %}

      {% block content_tags_slot %}
        {% if tags or with_link %}
          <div class="ct-event-card__tags">
            {% if tags %}
              {% include 'civictheme:tag-list' with {
                theme: theme,
                tags: tags,
              } only %}
            {% endif %}

            {% if with_link %}
              {% include 'civictheme:link' with {
                theme: theme,
                url: link.url,
                is_new_window: link.is_new_window,
                is_external: false,
                icon: 'right-arrow-2',
                modifier_class: 'ct-event-card__tags__link',
                attributes: 'aria-hidden="true" tabindex="-1"',
              } only %}
            {% endif %}
          </div>
        {% endif %}
      {% endblock %}

      {% block content_bottom_slot %}
        {% if content_bottom %}
          <div class="ct-event-card__content-bottom">
            {{- content_bottom|raw -}}
          </div>
        {% endif %}
      {% endblock %}
    </div>
  {% endblock %}
</div>
