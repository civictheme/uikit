{#
/**
 * @file
 * Snippet component.
 *
 * Variables:
 * - theme: [string] Theme variation (light or dark).
 * - content_top: [string] Content slot for the top of the snippet.
 * - content_middle: [string] Content slot for the middle of the snippet.
 * - content_bottom: [string] Content slot for the bottom of the snippet.
 * - title: [string] Title text for the snippet.
 * - summary: [string] Summary text for the snippet.
 * - link: [object] Link object for the snippet:
 *   - text: [string] Link text.
 *   - url: [string] Link URL.
 *   - is_new_window: [boolean] Whether to open link in a new window.
 *   - is_external: [boolean] Whether the link is external.
 * - tags: [array] List of tags for the snippet.
 * - attributes: [string] Additional HTML attributes.
 * - modifier_class: [string] Additional CSS classes.
 */
#}

{% set with_link = link is not empty and link.url is defined and link.url is not empty %}
{% set theme_class = 'ct-theme-%s'|format(theme|default('light')) %}
{% set modifier_class = '%s %s'|format(theme_class, modifier_class|default('')) %}

{% if title is not empty %}
  <div class="ct-snippet {{ modifier_class -}}" {% if attributes is not empty %}{{- attributes|raw -}}{% endif %}>
    {% block content_slot %}
      <div class="ct-snippet__content">
        {% block content_top_slot %}
          {% if content_top is not empty %}
            <div class="ct-snippet__content-top">
              {{- content_top|raw -}}
            </div>
          {% endif %}
        {% endblock %}

        {% block title_slot %}
          {% if title is not empty %}
            {% set title_content %}
              {% if with_link %}
                {% include 'civictheme:link' with {
                  theme: theme,
                  text: title,
                  url: link.url,
                  is_new_window: link.is_new_window,
                  is_external: false,
                  modifier_class: 'ct-snippet__title__link',
                } only %}
              {% else %}
                {{ title }}
              {% endif %}
            {% endset %}

            {% include 'civictheme:heading' with {
              content: title_content,
              level: 4,
              theme: theme,
              modifier_class: 'ct-snippet__title',
            } only %}
          {% endif %}
        {% endblock %}

        {% block content_middle_slot %}
          {% if content_middle is not empty %}
            <div class="ct-snippet__content-middle">
              {{- content_middle|raw -}}
            </div>
          {% endif %}
        {% endblock %}

        {% block summary_slot %}
          {% if summary is not empty %}
            {% include 'civictheme:paragraph' with {
              theme: theme,
              content: summary,
              allow_html: true,
              modifier_class: 'ct-snippet__summary',
            } only %}
          {% endif %}
        {% endblock %}

        {% block content_tags_slot %}
          {% if tags or with_link %}
            <div class="ct-snippet__tags">
              {% if tags %}
                {% include 'civictheme:tag-list' with {
                  theme: theme,
                  tags: tags,
                } only %}
              {% endif %}
            </div>
          {% endif %}
        {% endblock %}

        {% block content_bottom_slot %}
          {% if content_bottom is not empty %}
            <div class="ct-snippet__content-bottom">
              {{- content_bottom|raw -}}
            </div>
          {% endif %}
        {% endblock %}
      </div>
    {% endblock %}
  </div>
{% endif %}
