{#
/**
 * @file
 * CivicTheme Tag List component.
 *
 * Variables:
 * - theme: [string] Theme variation (light or dark).
 * - content_top: [string] Top content area.
 * - tags: [array] Tags:
 *   Each item contains:
 *   - text: [string] Tag text
 * - content_bottom: [string] Bottom content area.
 * - vertical_spacing: [string] Tag list vertical spacing (none, top, bottom, both).
 * - attributes: [string] Additional HTML attributes.
 * - modifier_class: [string] Additional CSS classes.
 *
 * Slots:
 * - content_top_slot: [slot] Top content area content
 * - content_slot: [slot] Content area content
 * - content_bottom_slot: [slot] Bottom content area content
 */
#}

{% set vertical_spacing_class = vertical_spacing in ['top', 'bottom', 'both'] ? 'ct-vertical-spacing--%s'|format(vertical_spacing) : '' %}
{% set theme_class = 'ct-theme-%s'|format(theme|default('light')) %}
{% set modifier_class = '%s %s %s'|format(theme_class, vertical_spacing_class, modifier_class|default('')) %}

{% if tags %}
  <div class="ct-tag-list {{ modifier_class -}}" {% if attributes %}{{- attributes|raw -}}{% endif %}>
    {% block content_top_slot %}
      {% if content_top %}
        <div class="ct-tag-list__content-top">
          {{- content_top|raw -}}
        </div>
      {% endif %}
    {% endblock %}

    {% block content_slot %}
      {% if tags %}
        {% set tag_items = [] %}
        {% for tag in tags %}
          {% set tag_item %}
            {% include 'civictheme:tag' with {
              theme: theme,
              content: tag,
            } only %}
          {% endset %}
          {% set tag_items = tag_items|merge([tag_item]) %}
        {% endfor %}
        {% include 'civictheme:item-list' with {
          items: tag_items,
          size: 'small',
          modifier_class: 'ct-tag-list__content',
        } only %}
      {% endif %}
    {% endblock %}

    {% block content_bottom_slot %}
      {% if content_bottom %}
        <div class="ct-tag-list__content-bottom">
          {{- content_bottom|raw -}}
        </div>
      {% endif %}
    {% endblock %}
  </div>
{% endif %}
