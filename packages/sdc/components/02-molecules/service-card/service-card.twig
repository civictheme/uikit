{#
/**
 * @file
 * CivicTheme Service Card component.
 *
 * Variables:
 * - theme: [string] Theme variation (light or dark).
 * - content_top: [string] Top content area.
 * - title: [string] Card title text.
 * - links: [array] Card links:
 *   Each item contains:
 *   - text: [string] Link text.
 *   - url: [string] Link URL.
 *   - is_new_window: [boolean] Whether to open link in a new window.
 *   - is_external: [boolean] Whether the link is external.
 * - content_bottom: [string] Bottom content area.
 * - attributes: [string] Additional HTML attributes.
 * - modifier_class: [string] Additional CSS classes.
 *
 * Slots:
 * - content_top_slot: [slot] Top content area
 * - title_slot: [slot] Title area content
 * - links_slot: [slot] Links area content
 * - content_bottom_slot: [slot] Bottom content area
 */
#}

{% set theme_class = 'ct-theme-%s'|format(theme|default('light')) %}
{% set modifier_class = '%s %s'|format(theme_class, modifier_class|default('')) %}

{% if title %}
  <div class="ct-service-card {{ modifier_class -}}" {% if attributes %}{{- attributes|raw -}}{% endif %}>
    <div class="ct-service-card__content">
      {% block content_top_slot %}
        {% if content_top %}
          <div class="ct-service-card__content-top">
            {{- content_top|raw -}}
          </div>
        {% endif %}
      {% endblock %}

      {% block title_slot %}
        {% if title %}
          {% include 'civictheme:heading' with {
            theme: theme,
            content: title,
            level: 4,
            modifier_class: 'ct-service-card__title',
          } only %}
        {% endif %}
      {% endblock %}

      {% block links_slot %}
        {% if links %}
          {% set list_items = [] %}
          {% for link in links %}
            {% if link.text %}
              {% set list_item %}
                {% include 'civictheme:link' with {
                  theme: theme,
                  text: link.text,
                  url: link.url,
                  is_new_window: link.is_new_window ? link.is_new_window : false,
                  is_external: link.is_external ? link.is_external : false,
                } only %}
              {% endset %}
              {% set list_items = list_items|merge([list_item]) %}
            {% endif %}
          {% endfor %}
          {% include 'civictheme:item-list' with {
            items: list_items,
            direction: 'vertical',
            modifier_class: 'ct-service-card__links',
          } only %}
        {% endif %}
      {% endblock %}

      {% block content_bottom_slot %}
        {% if content_bottom %}
          <div class="ct-service-card__content-bottom">
            {{- content_bottom|raw -}}
          </div>
        {% endif %}
      {% endblock %}
    </div>
  </div>
{% endif %}
