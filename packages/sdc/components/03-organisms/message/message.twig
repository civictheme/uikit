{#
/**
 * @file
 * CivicTheme Message component.
 *
 * Props:
 * - theme: [string] Theme variation (light or dark).
 * - type: [string] Message type (information, error, warning, success).
 * - title: [string] Title text.
 * - description: [string] Description text.
 * - content: [string] Content text.
 * - with_background: [boolean] Whether to show a background.
 * - vertical_spacing: [string] Vertical spacing: top, bottom, both.
 * - has_role: [boolean] Whether to has the role attribute.
 * - attributes: [string] Additional attributes.
 * - modifier_class: [string] Additional classes.
 *
 * Slots:
 * - title: Title text.
 * - description: Description text.
 */
#}

{% set type = type|default('information') %}
{% set type_class = 'ct-message--%s'|format(type) %}
{% set theme_class = 'ct-theme-%s'|format(theme|default('light')) %}
{% set with_background_class = with_background ? 'ct-message--with-background' : '' %}
{% set vertical_spacing_class = vertical_spacing in ['top', 'bottom', 'both'] ? 'ct-vertical-spacing-inset--%s'|format(vertical_spacing) : '' %}
{% set modifier_class = '%s %s %s %s %s'|format(
  theme_class,
  type_class,
  with_background_class,
  vertical_spacing_class,
  modifier_class|default(''))
%}
{% set has_role = has_role|default(true) %}
{# If description is set, use it as content because it has been used as description. #}
{% set content = description|default(content) %}

{% set icons = {
  information: 'information-mark',
  warning: 'exclamation-mark-2',
  error: 'exclamation-mark-1',
  success: 'approve',
} %}

<div class="ct-message {{ modifier_class }}"
  {% if has_role %}
    role="{{ type == 'error' ? 'alert' : 'contentinfo' }}"
    aria-label="{{ type }}"
    aria-live="assertive"
  {% endif %}
  {% if attributes is not empty %}{{- attributes|raw -}}{% endif %}
>
  <div class="ct-message__inner">
    {% if icons[type] is defined %}
      <div class="ct-message__icon">
        {% include "civictheme:icon" with {
          symbol: icons[type],
          size: 'regular',
        } only %}
      </div>
    {% endif %}

    <div class="ct-message__content">
      {% if title %}
        <div class="ct-message__title">{{ title }}</div>
      {% endif %}

      {% if content %}
        {% include '@atoms/paragraph/paragraph.twig' with {
          theme: theme,
          content: content,
          allow_html: true,
          modifier_class: 'ct-message__summary',
        } only %}
      {% endif %}
    </div>
  </div>
</div>
