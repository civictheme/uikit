{#
/**
 * @file
 * CivicTheme Header component.
 *
 * Variables:
 * - theme: [string] Theme variation (light or dark).
 * - content_top1: [string] Top section first content slot.
 * - content_top2: [string] Top section second content slot.
 * - content_top3: [string] Top section third content slot.
 * - content_middle1: [string] Middle section first content slot.
 * - content_middle2: [string] Middle section second content slot.
 * - content_middle3: [string] Middle section third content slot.
 * - content_bottom1: [string] Bottom section content slot.
 * - modifier_class: [string] Additional CSS classes.
 *
 * Slots:
 * - content_top1_slot: [slot] Top1 content area content
 * - content_top2_slot: [slot] Top2 content area content
 * - content_top3_slot: [slot] Top3 content area content
 * - content_middle1_slot: [slot] Middle1 content area content
 * - content_middle2_slot: [slot] Middle2 content area content
 * - content_middle3_slot: [slot] Middle3 content area content
 * - content_bottom1_slot: [slot] Bottom1 content area content
 */
#}

{% set theme_class = 'ct-theme-%s'|format(theme|default('light')) %}
{% set modifier_class = '%s %s'|format(theme_class, modifier_class|default('')) %}

{% if content_top1 is not empty or content_top2 is not empty or content_top3 is not empty or content_middle1 is not empty or content_middle2 is not empty or content_middle3 is not empty or content_bottom1 is not empty %}
  <header class="ct-header {{ modifier_class -}}" role="banner">

    {% if content_top1 is not empty or content_top2 is not empty or content_top3 is not empty %}
      <div class="ct-header__top hide-xxs show-m">

        {% if content_top1 is not empty %}
          {% block content_top1_slot %}
            <div class="container">
              <div class="row">
                <div class="col-xxs-12">
                  <div class="ct-header__content-top1">
                    {{ content_top1|raw }}
                  </div>
                </div>
              </div>
            </div>
          {% endblock %}
        {% endif %}

        {% if content_top2 is not empty or content_top3 is not empty %}
          <div class="container">
            <div class="row">

              {% block content_top2_slot %}
                <div class="col-xxs-12 col-m-4">
                  <div class="ct-header__content-top2">
                    {{ content_top2|raw }}
                  </div>
                </div>
              {% endblock %}

              {% block content_top3_slot %}
                <div class="col-xxs-12 col-m-8">
                  <div class="ct-header__content-top3">
                    {{ content_top3|raw }}
                  </div>
                </div>
              {% endblock %}

            </div>
          </div>
        {% endif %}
      </div>
    {% endif %}

    {% if content_middle1 is not empty or content_middle2 is not empty or content_middle3 is not empty %}
      <div class="ct-header__middle">

        {% if content_middle1 is not empty %}
          {% block content_middle1_slot %}
            <div class="container">
              <div class="row">
                <div class="col-xxs-12">
                  <div class="ct-header__content-middle1">
                    {{ content_middle1|raw }}
                  </div>
                </div>
              </div>
            </div>
          {% endblock %}
        {% endif %}

        {% if content_middle2 is not empty or content_middle3 is not empty %}
          <div class="container">
            <div class="row row--no-wrap">
              {% if content_middle2 is not empty %}
                {% block content_middle2_slot %}
                  <div class="col col--no-grow">
                    <div class="ct-header__content-middle2">
                      {{ content_middle2|raw }}
                    </div>
                  </div>
                {% endblock %}
              {% endif %}

              {% if content_middle3 is not empty %}
                {% block content_middle3_slot %}
                  <div class="col">
                    <div class="ct-header__content-middle3">
                      {{ content_middle3|raw }}
                    </div>
                  </div>
                {% endblock %}
              {% endif %}
            </div>
          </div>
        {% endif %}
      </div>
    {% endif %}

    {% if content_bottom1 is not empty %}
      {% block content_bottom1_slot %}
        <div class="container">
          <div class="row">
            <div class="col-xxs-12">
              <div class="ct-header__content-bottom1">
                {{ content_bottom1|raw }}
              </div>
            </div>
          </div>
        </div>
      {% endblock %}
    {% endif %}

  </header>
{% endif %}
