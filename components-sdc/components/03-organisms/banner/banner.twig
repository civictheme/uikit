{#
/**
 * @file
 * Banner component.
 *
 * Variables:
 * - content_top1: [string] Content slot.
 * - breadcrumb: [array] Breadcrumb links.
 * - content_top2: [string] Content slot.
 * - content_top3: [string] Content slot.
 * - content_middle: [string] Content slot.
 * - content: [string] Content slot.
 * - content_bottom: [string] Content slot.
 * - content_below: [string] Content slot.
 * - site_section: [string] Site section.
 * - title: [string] Title.
 * - is_decorative: [boolean] Show as decorative.
 * - featured_image: [object] Featured image object:
 *   - url: [string] Source.
 *   - alt: [string] Alt text.
 * - background_image: [string] URL to a background image.
 *   - url: [string] Source.
 *   - alt: [string] Alt text.
 * - background_image_blend_mode: [string] Type of the backgeound image blending. Defaults to 'normal'.
 * - theme: [string] Theme: light, dark.
 * - modifier_class: [string] Additional classes.
 * - attributes: [string] Banner attributes.
 */
#}

{% set is_decorative_class = is_decorative ? 'ct-banner--decorative' : '' %}
{% set theme_class = 'ct-theme-%s'|format(theme|default('light')) %}
{% set modifier_class = '%s %s %s'|format(theme_class, is_decorative_class, modifier_class|default('')) %}

{% if content_top1  or content_top2  or content_top3  or site_section  or title  or content_middle  or content  or content_below  or content_bottom  %}
  <div class="ct-banner {{ modifier_class -}}" id="main-content" tabindex="-1" {% if attributes  %}{{- attributes|raw -}}{% endif %}>
    <div class="ct-banner__wrapper">
      <div
        class="ct-banner__inner {% if background_image_blend_mode %}ct-background--{{ background_image_blend_mode|default('normal') }}{% endif %}"
        {% if background_image and background_image.url is defined and background_image.url  %}style="background-image: url('{{ background_image.url }}');"{% endif %}
      >
        {% if background_image and background_image.alt is defined and background_image.alt  %}
        <span role="img" aria-label="{{ background_image.alt }}"> </span>
        {% endif %}

        <div class="container">

          {% if content_top1  %}
            <div class="row">
              {%- block content_top1 %}
                <div class="col-xxs-12">
                  <div class="ct-banner__content-top">
                    {{- content_top1|raw -}}
                  </div>
                </div>
              {% endblock -%}
            </div>
          {% endif %}

          {% if breadcrumb  or content_top2  %}
            <div class="row">
              {% block breadcrumb %}
                {% if breadcrumb  %}
                  <div class="{% if featured_image  %}col-xxs-12 col-m-6{% else %}col-xxs-12{% endif %}">
                    {% include 'civictheme:breadcrumb' with {
                      theme: theme,
                      links: breadcrumb.links,
                      active_is_link: breadcrumb.active_is_link,
                      modifier_class: 'ct-banner__breadcrumb',
                    } only %}
                  </div>
                {% endif %}
              {% endblock %}

              {% if content_top2  %}
                {%- block content_top2 %}
                  <div class="col-xxs-12 col-m-6">
                    <div class="ct-banner__content-top2">
                      {{- content_top2|raw -}}
                    </div>
                  </div>
                {% endblock -%}
              {% endif %}
            </div>
          {% endif %}

          {% if content_top3  %}
            <div class="row">
              {%- block content_top3 %}
                <div class="col-xxs-12">
                  <div class="ct-banner__content-top3">
                    {{- content_top3|raw -}}
                  </div>
                </div>
              {% endblock -%}
            </div>
          {% endif %}

          {% if site_section  %}
            <div class="row">
              {%- block site_section %}
                <div class="col-xxs-12">
                  {% include 'civictheme:heading' with {
                    theme: theme,
                    content: site_section,
                    level: 5,
                    modifier_class: 'ct-banner__site-section',
                  } only %}
                </div>
              {% endblock -%}
            </div>
          {% endif %}

          {% if title  %}
            <div class="row">
              {%- block title %}
                <div class="{% if featured_image  %}col-xxs-12 col-m-6{% else %}col-xxs-12{% endif %}">
                  {% include 'civictheme:heading' with {
                    theme: theme,
                    content: title,
                    level: 1,
                    modifier_class: 'ct-banner__title',
                  } only %}
                </div>
              {% endblock -%}
            </div>
          {% endif %}

          {% if content_middle  %}
            <div class="row">
              {%- block content_middle %}
                <div class="{% if featured_image  %}col-xxs-12 col-m-6{% else %}col-xxs-12{% endif %}">
                  <div class="ct-banner__content-middle">
                    {{- content_middle|raw -}}
                  </div>
                </div>
              {% endblock -%}
            </div>
          {% endif %}

          {% if content  %}
            <div class="row">
              {%- block content %}
                <div class="{% if featured_image  %}col-xxs-12 col-m-6{% else %}col-xxs-12{% endif %}">
                  <div class="ct-banner__content">
                    {{- content|raw -}}
                  </div>
                </div>
              {% endblock -%}
            </div>
          {% endif %}

        </div>
      </div>

      {% block featured_image %}
        {% if featured_image  %}
          <div class="ct-banner__featured-image__wrapper">
            {% include 'civictheme:image' with {
              theme: theme,
              url: featured_image.url,
              alt: featured_image.alt,
              modifier_class: 'ct-banner__featured-image',
            } only %}
          </div>
        {% endif %}
      {% endblock %}
    </div>

    {% if content_below  %}
      <div class="container">
        <div class="row">
          {%- block content_below %}
            <div class="col-xxs-12">
              <div class="ct-banner__content-below">
                {{- content_below|raw -}}
              </div>
            </div>
          {% endblock -%}
        </div>
      </div>
    {% endif %}

    {% if content_bottom  %}
      <div class="container">
        <div class="row">
          {%- block content_bottom %}
            <div class="col-xxs-12">
              <div class="ct-banner__content-bottom">
                {{- content_bottom|raw -}}
              </div>
            </div>
          {% endblock -%}
        </div>
      </div>
    {% endif %}
  </div>
{% endif %}
