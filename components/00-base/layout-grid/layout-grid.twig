{#
/**
 * @file
 * Layout grid component.
 *
 * Variables:
 * - grid_structure: [array] Grid: light, dark.
 * - content_mapping: [array] Map.
 * - gap_col: [integer] Column gap.
 * - gap_row: [integer] Row gap.
 */
#}

<div class="grid">
    {% for row in grid_structure %}
        {% set row_content = row[0] %}
        {% set col_span = 1 %}
        {% set row_index = loop.index %}

        {% for cell in row %}
            {% if cell == row_content %}
                {% set col_span = col_span + 1 %}
            {% else %}
                <div class="{{ content_mapping[row_content] | lower }} col-{{ col_span }} row-{{ row_index }}">
                    {{ content_mapping[row_content] }}
                </div>
                {% set row_content = cell %}
                {% set col_span = 1 %}
            {% endif %}

            {% if loop.last %}
                <div class="{{ content_mapping[row_content] | lower }} col-{{ col_span }} row-{{ row_index }}">
                    {{ content_mapping[row_content] }}
                </div>
            {% endif %}
        {% endfor %}
    {% endfor %}
</div>